<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="40dp"
    android:background="@drawable/back_thirty_radius_white"
    android:elevation="20dp">

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layoutDirection="rtl">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:drawableRight="@drawable/ic_public_pink_24dp"
            android:gravity="right"
            android:layoutDirection="rtl"
            android:paddingRight="10dp"
            android:text="#aa"
            android:textColor="@color/darkGray"
            android:textDirection="rtl"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:drawableRight="@drawable/ic_date_range_pink_24dp"
            android:drawablePadding="10dp"
            android:layoutDirection="ltr"
            android:layout_gravity="center"
            android:text="1397/8/22"
            android:textColor="@color/pink"
            android:textDirection="rtl"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>



    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/lin1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_start_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_location_green"
            android:drawablePadding="5dp"
            android:text="ولیعصر،میدان ولیعصر،پلاک 1،واحد5"
            android:textColor="@color/color06"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sender_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableRight="@drawable/ic_person_green_24dp"
            android:drawablePadding="5dp"
            android:text="محمدرضا اکبری"
            android:textColor="@color/color06"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sender_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableRight="@drawable/ic_phone_in_talk_green_24dp"
            android:drawablePadding="5dp"
            android:text="0990 537 4633"
            android:textColor="@color/color06"
            android:textDirection="rtl"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/lin2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/lin3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_end_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_location_orange"
            android:drawablePadding="5dp"
            android:text="ولیعصر،میدان ولیعصر،پلاک 1،واحد5"
            android:textColor="@color/color06"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_receiver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableRight="@drawable/ic_person_orange"
            android:drawablePadding="5dp"
            android:text="محمدرضا اکبری"
            android:textColor="@color/color06"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_receiver_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableRight="@drawable/ic_phone_orange"
            android:drawablePadding="5dp"
            android:text="0990 537 4633"
            android:textColor="@color/color06"
            android:textDirection="rtl"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/lin3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view3"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layoutDirection="rtl"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_fifteen_radius_green"
            android:drawableRight="@drawable/ic_list_dark_blue"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/details"
            android:textColor="@color/color06"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_fifteen_radius_green"
            android:drawableRight="@drawable/ic_refresh_dark_blue"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/request"
            android:textColor="@color/color06"
            android:textSize="16dp"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>