<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color06">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#001D25"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/color06"
            android:orientation="horizontal"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_title"
                style="@style/title_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/details"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintWidth_percent="0.4" />

            <TextView
                android:id="@+id/tv_return"
                style="@style/tv_return"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="start"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="4"
                app:layout_constraintLeft_toRightOf="@id/tv_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintWidth_percent="0.2" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/back"
                android:gravity="center"
                android:src="@drawable/ic_chevron_right_white_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_return"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_middle"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#001D25"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/guideline_underHeader"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_middle">

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/curve_shape_dark_blue">

            </View>

        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_underHeader"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/back_fifty_radius_light_gray"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:translationY="-30dp"
            android:weightSum="4"
            app:layout_constraintHeight_percent="0.17"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_underHeader"
            app:layout_constraintWidth_percent="0.9">

            <TextView
                style="@style/common_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/travel_category" />


        </LinearLayout>

        <org.neshan.ui.MapView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.55"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_underHeader"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintWidth_percent="0.9" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color06"
        app:layout_constraintBottom_toTopOf="@id/guidelineMid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curve_shape_dark">

        </View>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMid"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_cons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/back_fifteen_light_gray"
        android:layoutDirection="rtl"
        android:translationY="-35dp"
        app:layout_constraintBottom_toTopOf="@id/guideline_aboveEnd"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineMid"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_percent="0.9">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lin2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layoutDirection="rtl"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3">

            <TextView
                android:id="@+id/tv_t"
                style="@style/dark_blue_16"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/come_back"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                style="@style/text_green"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="start"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toBottomOf="@id/tv_t">

                <TextView
                    android:id="@+id/tv_have"
                    style="@style/gray_bold_16"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="end"
                    android:paddingStart="@dimen/text_padding"
                    android:paddingEnd="@dimen/text_padding"
                    android:text="@string/have" />

                <TextView
                    style="@style/gray_bold_16"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/slash" />

                <TextView
                    android:id="@+id/tv_does_not_have"
                    style="@style/gray_bold_16"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:paddingStart="@dimen/text_padding"
                    android:paddingEnd="@dimen/text_padding"
                    android:text="@string/does_not_have" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@color/darkGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintLeft_toRightOf="@id/lin3"
            app:layout_constraintRight_toLeftOf="@id/lin2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.06" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lin3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layoutDirection="rtl"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3">

            <TextView
                android:id="@+id/tv_tp"
                style="@style/dark_blue_16"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/payment_way"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                style="@style/text_green"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="start"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toBottomOf="@id/tv_tp">

                <TextView
                    android:id="@+id/tv_credit"
                    style="@style/gray_bold_16"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="end"
                    android:paddingStart="@dimen/text_padding"
                    android:paddingEnd="@dimen/text_padding"
                    android:text="@string/credit_" />

                <TextView
                    style="@style/gray_bold_16"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/slash" />

                <TextView
                    android:id="@+id/tv_cache"
                    style="@style/gray_bold_16"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:paddingStart="@dimen/text_padding"
                    android:paddingEnd="@dimen/text_padding"
                    android:text="@string/cache" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@color/darkGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintLeft_toRightOf="@id/lin4"
            app:layout_constraintRight_toLeftOf="@id/lin3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.06" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lin4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layoutDirection="rtl"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3">

            <TextView
                android:id="@+id/tv_top"
                style="@style/dark_blue_16"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/payAt"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                style="@style/text_green"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toBottomOf="@id/tv_top">

                <TextView
                    android:id="@+id/tv_start_location"
                    style="@style/gray_bold_16"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingStart="@dimen/text_padding"
                    android:paddingEnd="@dimen/text_padding"
                    android:text="@string/start" />

                <TextView
                    style="@style/gray_bold_16"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/slash" />

                <TextView
                    android:id="@+id/tv_destination"
                    style="@style/gray_bold_16"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/text_padding"
                    android:paddingEnd="@dimen/text_padding"
                    android:text="@string/destination" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darkGray"
            app:layout_constraintTop_toBottomOf="@id/lin2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintWidth_percent="0.48">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_right"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1" />

            <TextView
                android:id="@+id/tv_req"
                style="@style/dark_blue_16"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingTop="10dp"
                android:text="@string/accept_request"
                app:layout_constraintHeight_percent="0.33"
                app:layout_constraintRight_toLeftOf="@id/guide_right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.8" />

            <TextView
                android:id="@+id/tv_receive"
                style="@style/dark_blue_16"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingTop="10dp"
                android:text="@string/receive_from_client"
                app:layout_constraintHeight_percent="0.33"
                app:layout_constraintRight_toLeftOf="@id/guide_right"
                app:layout_constraintTop_toBottomOf="@id/tv_req"
                app:layout_constraintWidth_percent="0.8" />

            <TextView
                style="@style/dark_blue_16"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingTop="10dp"
                android:text="@string/give_to_client"
                app:layout_constraintHeight_percent="0.31"
                app:layout_constraintRight_toLeftOf="@id/guide_right"
                app:layout_constraintTop_toBottomOf="@id/tv_receive"
                app:layout_constraintWidth_percent="0.9" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/lin_mid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="3"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintRight_toLeftOf="@id/cons_right"
            app:layout_constraintTop_toBottomOf="@id/lin3"
            app:layout_constraintWidth_percent="0.3">

            <TextView
                android:id="@+id/tv_accept_req_date"
                style="@style/text_pink"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_date_range_pink_24dp"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_receive_date"
                style="@style/text_pink"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_date_range_pink_24dp"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_give_dat"
                style="@style/text_pink"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_date_range_pink_24dp"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="3"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintRight_toLeftOf="@id/lin_mid"
            app:layout_constraintTop_toBottomOf="@id/lin3"
            app:layout_constraintWidth_percent="0.22">

            <TextView
                android:id="@+id/tv_accept_req_hour"
                style="@style/text_pink"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_access_time_pink_24dp"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_receive_hour"
                style="@style/text_pink"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_access_time_pink_24dp"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_give_hour"
                style="@style/text_pink"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_access_time_pink_24dp"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_aboveEnd"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color06"
        app:layout_constraintBottom_toTopOf="@id/guideline_end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_aboveEnd">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curve_shape_green"
            android:scaleX="-1"
            android:scaleY="-1">

        </View>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/green"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:onClick="SendRequest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/guideline_end">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/confirm_continue"
            android:src="@drawable/limit_icon_signup_bottom" />

        <TextView
            style="@style/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:onClick="OnContinueClick"
            android:text="@string/confirm_continue" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>